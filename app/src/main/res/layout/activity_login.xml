<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <ImageView
        android:id="@+id/LogoAnimalie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:contentDescription="Logo_Animalie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_animalie_foreground" />

    <EditText
        android:id="@+id/Username_Email_form"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginTop="32dp"
        android:autofillHints="username,email"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/manrope"
        android:freezesText="false"
        android:hint="Email atau Username"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAlignment="gravity"
        android:textColor="@color/seed"
        android:textColorHint="@color/seed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LogoAnimalie"
        tools:ignore="TextFields" />

    <EditText
        android:id="@+id/NewPassword_form"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:background="@drawable/edit_text_background"
        android:ems="10"
        android:fontFamily="@font/manrope"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/seed"
        android:textColorHint="@color/seed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Username_Email_form" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="350dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope"
        android:text="Login"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewPassword_form" />

    <TextView
        android:id="@+id/app_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/marcellus"
        android:text="@string/app_name"
        android:textColor="@color/seed"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/LogoAnimalie"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/LogoAnimalie"
        app:layout_constraintTop_toTopOf="@+id/LogoAnimalie" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton">

        <TextView
            android:id="@+id/NoAccoundtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/manrope"
            android:text="Tidak mempunyai akun? "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/RegistrasiPageLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="@font/manrope"
            android:linksClickable="true"
            android:text="Registrasi"
            android:textColor="@color/seed"
            android:textColorLink="@color/seed"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>