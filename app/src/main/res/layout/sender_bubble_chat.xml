<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sender_bubble"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right|end"

    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:gravity="end"
    android:orientation="horizontal">
//

    <LinearLayout
        android:id="@+id/bubble_chat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/send_bubble_background"
        android:maxWidth="250dp"
        android:minWidth="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:elegantTextHeight="true"
            android:fontFamily="@font/manrope_regular"
            android:maxWidth="300dp"
            android:paddingStart="18dp"
            android:paddingTop="5dp"
            android:text="dddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_stamp_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:layout_marginBottom="4dp"
            android:gravity="right|end"
            android:maxEms="5"
            android:maxLength="5"
            android:maxLines="1"
            android:paddingRight="19dp"
            android:text="17:00"
            android:textAlignment="textEnd"
            android:translationX="-7dp"
            android:translationY="5dp" />

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_photo_profile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="end"
        android:layout_marginLeft="5dp"
        tools:src="@tools:sample/avatars" />

</LinearLayout>