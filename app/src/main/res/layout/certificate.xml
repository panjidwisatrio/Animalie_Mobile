<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:layout_margin="8dp"
    android:elevation="2dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/certificate_logo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="@string/certificate"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/logo_rand_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/certificate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certificate_title"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/certificate_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certificate_publisher"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/certificate_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/certificate_description"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>